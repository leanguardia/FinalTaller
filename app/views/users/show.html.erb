<div class="container ">  
  <div class="panel panel-primary">
    <div class="panel-heading" align="center"><h1><strong>Profile</strong></h1></div>
    <div class="panel-body">  
     <center> <table class="table table-user-information">
        <tbody>
          <tr>
            <td><strong>Name</strong></td>
            <td><%= @user.name %></td>
          <tr>

          <tr>
            <td><strong>Lastname</strong></td>
            <td><%= @user.lastname %></td>
          </tr>


          <tr>
            <td><strong>Sex</strong></td>
            <td><%= @user.sex %></td>
          </tr>

          <tr>
            <td><strong>Weight</strong></td>
            <td><%= @user.weight %></td>
          </tr>

          <tr>
            <td><strong>Height</strong></td>
            <td><%= @user.height %></td>
          </tr>

          <tr>
            <td><strong>Birthdate</strong></td>
            <td><%= @user.birthdate %></td>
          </tr>

          <tr>
            <td><strong>Email</strong></td>
            <td><%= @user.email %></td>
          </tr>

      </tbody>
    </table></center>

<div align="right">
  <%= link_to 'Back', root_path , :class =>'btn bg-yellow'%> &nbsp;
  <% if current_user.id == @user.id %> <%= link_to 'Edit', edit_user_path(@user) , :class => 'btn bg-blue'%> <% end %>
</div>
</div>



</div>

</div><br>
