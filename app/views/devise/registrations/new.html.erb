<h3><b>Sign up</b></h3><br>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="container" >    
    <form role="form" >
      <div class="col-lg-6">
        <div class="well well-sm"><strong><span class="glyphicon glyphicon-asterisk"></span> Required Field</strong></div>  
        
        <div class="form-group">
          <%= f.label :name %>
          <div class="input-group">
            <%= f.text_field :name, autofocus: true, :class => 'form-control',:maxlength => 25, :placeholder=>'Name' %>
            <span class="input-group-addon"><span class="glyphicon glyphicon-asterisk"></span></span>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :last_name %>
          <div class="input-group">
            <%= f.text_field :lastname, autofocus: true, :class => 'form-control',:maxlength => 25, :placeholder=>'Last name'%>
              <span class="input-group-addon"><span class="glyphicon glyphicon-asterisk"></span></span>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :sex %>
          <div class="input-group">
            <%= f.select :sex, options_for_select([["Female", "Female"], ["Male", "Male"]]), :class => 'form-control'%>
              <span class="input-group-addon"><span class="glyphicon glyphicon-asterisk"></span></span>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :weight %>
          <div class="input-group">
            <%= f.text_field :weight, autofocus: true, :class => 'form-control',:maxlength => 6, :placeholder=>'Ej: 70.12' %>
              <span class="input-group-addon"><span class="glyphicon glyphicon-asterisk"></span></span>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :height %>
          <div class="input-group">
            <%= f.text_field :height, autofocus: true, :class => 'form-control',:maxlength => 6, :placeholder=>'Ej: 1.70' %>
              <span class="input-group-addon"><span class="glyphicon glyphicon-asterisk"></span></span>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :birthdate %>
          <div class="input-group">
            <%= f.date_select :birthdate,:order => [:day, :month, :year], :start_year => 1950%>
            <span class="input-group-addon"><span class="glyphicon glyphicon-asterisk"></span></span>
          </div>
        </div>

        <%= f.hidden_field :rol, :value => "Client" %>
        
        <%= f.hidden_field :active, :value => true %>
        
        <div class="form-group">
          <%= f.label :email %>
          <div class="input-group">
            <%= f.email_field :email, autofocus: true, :class => 'form-control',:maxlength => 25, :placeholder=>'ejemplo@gmail.com' %>
              <span class="input-group-addon"><span class="glyphicon glyphicon-asterisk"></span></span>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :password %>
          <% if @validatable %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <div class="input-group">
            <%= f.password_field :password, autocomplete: "off", :class => 'form-control',:maxlength => 25, :placeholder=>'*******' %>
            <span class="input-group-addon"><span class="glyphicon glyphicon-asterisk"></span></span>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation %>
          <div class="input-group">
            <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control',:maxlength => 25, :placeholder=>'*******' %>
            <span class="input-group-addon"><span class="glyphicon glyphicon-asterisk"></span></span>
          </div>
        </div>

        <div class="actions" align="right">
          <%= f.submit "Sign up", :class => 'btn btn-success' %>
          <%- if controller_name != 'sessions' %>
            <%= link_to "Log in", new_session_path(resource_name) , :class => 'btn btn-primary' %>
          <% end -%>
        </div>
      </div>
    </div>  
  </form>
</div>
<% end %>

<%= render "devise/shared/links" %>
