<div class="container ">  
  <div class="box">
    <div class="box-header">
      <h3 class="box-title">List of alarms</h3>
        <table class="table no-margin">
        <thead>
          <tr>
            <th>Type</th>
            <th>Day week</th>
            <th>Alarm hour</th>
            <th>State</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @alarms.each do |alarm| %>
            <tr>
              <td><%= alarm.name %></td>
              <td><%= alarm.day_week %></td>
              <td><%= alarm.alarm_hour.strftime("%H : %M")%></td>
              <td><%= alarm.state %></td>
              <td><%= link_to 'Show', alarm, :class => 'btn btn-info' %></td>
              <td><%= link_to 'Edit', edit_alarm_path(alarm), :class => 'btn btn-warning'  %></td>
              <td><%= link_to 'Destroy', alarm, :class => 'btn btn-danger' , method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>


<br>
<div align="right">
  <%= link_to 'New Alarm', new_alarm_path , :class => 'btn btn-success' %><br><br>
</div>

</div>

