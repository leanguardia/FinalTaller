<h1>New goal</h1>

<%= form_for(@goal) do |f| %>

    <div class="field">
      <%= f.label :end_date %><br>
      <%= f.datetime_select :end_date %>
    </div>

    <div class="field">
      <%= f.label :target %><br>
      <%= f.text_field :target %>
    </div>

    <div class="field">
      <%= f.label :goal_type_id %><br>
      <%= f.text_field :goal_type_id %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>


<%= link_to 'Back', goals_path %>
