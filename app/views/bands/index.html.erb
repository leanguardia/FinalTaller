<h1>Listing bands</h1>

<table>
  <thead>
    <tr>
      <th>Color</th>
      <th>User</th>
      <th>Band type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bands.each do |band| %>
      <tr>
        <td><%= band.color %></td>
        <td><%= band.user %></td>
        <td><%= band.Band_type %></td>
        <td><%= link_to 'Show', band %></td>
        <td><%= link_to 'Edit', edit_band_path(band) %></td>
        <td><%= link_to 'Destroy', band, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

