

<div class="container jumbotron" style="background-color: inherit">
<h2>Listing bands</h2>

<table>
  <thead>
    <tr>
      <th>Color</th>
      <th>User</th>
      <th>Band type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bands.each do |band| %>
      <tr>
        <td><%= band.color %></td>
        <td><%= band.user.email %></td>
        <td><%= band.Band_type.model %></td>
        <td><%= link_to 'Show', band %></td>
        <td><%= link_to 'Edit', edit_band_path(band) %></td>
        <td><%= link_to 'Delete', band, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Band', new_band_path %>

</div>

<br>


