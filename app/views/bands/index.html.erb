

<div class="container jumbotron" style="background-color: inherit">
<h2>Listing bands</h2>

<table >
  <thead>
    <tr>
      <th>User</th>
      <th>Color</th>
      <th>Band type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bands.each do |band| %>
      <tr>
        <td><%= band.user.email %></td>

        <td><%= band.color %></td>
        
        <td align="center"><%= band.Band_type.model %></td>
        <td><%= link_to 'Show', band ,{class: "btn btn-default"}%></td>
        <td><%= link_to 'Edit', edit_band_path(band),class: "btn btn-default" %></td>
        <td><%= link_to 'Delete', band , class: "btn btn-block btn-danger",  method: :delete, data: { confirm: 'Are you sure?' }    %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Band', new_band_path %>

</div>

<br>


