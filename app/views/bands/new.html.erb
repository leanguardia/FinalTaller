<div class="container ">  
  <div class="col-xs-3 col-lg-3"></div>
    <div class="col-lg-6">

    	<h2>Register your New band</h2><br>

      <%= form_validated_for(@band) do |f| %>

          <div class="form-group">
            <%= f.label :color %><br>
            <%= f.select :color, @colors, {}, {class: 'form-control'}%>
          </div>

          <div class="form-group">
            <%= f.label :Band_type_id %><br>
            <%= f.select :Band_type_id, @types, {}, {class: 'form-control'}%>
          </div>
          <div class="actions" align="left">
            <%= f.submit "New Band", :class => 'btn btn-success'%><%= link_to 'Back', bands_path, {class: "btn btn-default", style: "float:right;"} %>
          </div><br>

      <% end %>
    </div>
  </div>
</div>
